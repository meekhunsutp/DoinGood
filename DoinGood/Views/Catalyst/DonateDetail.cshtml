@model DoinGood.Models.Donate

@{
    ViewData["Title"] = "DonateDetail";
}

<h1>DonateDetail</h1>

<div>
    <h4>Donate</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Zip:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PosterCatalyst.Address.Zip)
        </dd>
        <dt class="col-sm-2">
            Poster Catalyst:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PosterCatalyst.FirstName)
        </dd>
        <dt class="col-sm-2">
            Fund:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fund.FundName)
        </dd>
        <dt class="col-sm-2">
            Item Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class="col-sm-2">
            Item Description:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemDescription)
        </dd>
        <dt class="col-sm-2">
            Value:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Value)
        </dd>
        <dt class="col-sm-2">
            Image:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="DonateBuy" asp-route-id="@Model.DonationId">I would like to Buy!</a> |
    <a asp-action="DonateEdit" asp-route-id="@Model.DonationId">Edit</a> |
    <a asp-action="DonateIndex">Back to List</a>
</div>
