@model DoinGood.Models.Tasks

@{
    ViewData["Title"] = "TasksEdit";
}

<h1>Edit</h1>

<h4>Tasks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TasksEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskId" />
            <input type="hidden" asp-for="PosterCatalystId" />
            <input type="hidden" asp-for="TaskerCatalystId" />
            <input type="hidden" asp-for="Fund" />
            <input type="hidden" asp-for="PosterCatalyst" />
            <input type="hidden" asp-for="PosterComplete" />
            <input type="hidden" asp-for="TaskerCatalyst" />
            <input type="hidden" asp-for="TaskerCatalystId" />
            <input type="hidden" asp-for="TaskerComplete" />
            <input type="hidden" asp-for="TaskerValue" />
            <input type="hidden" asp-for="TaskerFund" />
            <input type="hidden" asp-for="TaskerFundId" />
            <div class="form-group">
                <label asp-for="TaskTitle" class="control-label">Task you need completed</label>
                <input asp-for="TaskTitle" class="form-control" placeholder="Task Name" />
                <span asp-validation-for="TaskTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDescription" class="control-label">Please describe your task in detail</label>
                <input asp-for="TaskDescription" class="form-control" placeholder="Description" />
                <span asp-validation-for="TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label">Value<sup> *to be donated</sup></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Image</label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FundId">Select a cause to support</label>
                <select asp-for="FundId" class="form-control" asp-items="ViewBag.fundList"></select>
                <span asp-validation-for="FundId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="TasksIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
