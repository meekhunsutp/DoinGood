@model IEnumerable<DoinGood.Models.Deed>

@{
    ViewData["Title"] = "DeedIndex";
}

<h1>DeedIndex</h1>

<p>
    <a asp-action="DeedCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Catalyst)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fund)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beneficence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Impact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonateAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InspireCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChallengeCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Catalyst.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fund.FundName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beneficence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Impact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonateAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InspireCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChallengeCount)
            </td>
            <td>
                <a asp-action="DeedEdit" asp-route-id="@item.DeedId">Edit</a> |
                <a asp-action="DeedDetail" asp-route-id="@item.DeedId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
