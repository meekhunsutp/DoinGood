@model DoinGood.Models.Donate

@{
    ViewData["Title"] = "DonateBuy";
}

<h1>Purchase Donation</h1>

<div>
    <h4>Donate</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Poster Catalyst:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PosterCatalyst.FirstName)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PosterCatalyst.EmailAddress)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PosterCatalyst.Address.StreetAddress), @Html.DisplayFor(model => model.PosterCatalyst.Address.City), @Html.DisplayFor(model => model.PosterCatalyst.Address.State), @Html.DisplayFor(model => model.PosterCatalyst.Address.Zip)
        </dd>
        <dt class="col-sm-2">
            Buying Catalyst:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonorCatalyst.FirstName)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonorCatalyst.EmailAddress)
        </dd>
        <dt class="col-sm-2">
            Fund:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fund.FundName)
        </dd>
        <dt class="col-sm-2">
            Item Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class="col-sm-2">
            Item Description:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemDescription)
        </dd>
        <dt class="col-sm-2">
            Value:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Value)
        </dd>
        <dt class="col-sm-2">
            Image:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DonationId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
